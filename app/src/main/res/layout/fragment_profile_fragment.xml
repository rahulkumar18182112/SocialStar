<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile_fragment"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:id="@+id/background_img"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:civ_border_color="@color/black"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_width="2dp"
        android:id="@+id/profile_img"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Rahul kumar"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/username"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="artist"
        android:layout_marginLeft="5dp"

        android:textSize="15sp"
        android:id="@+id/profession"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/contacts"
            android:src="@drawable/contacts"

            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/text"
            android:src="@drawable/text"

            android:layout_marginLeft="15dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/call"
            android:src="@drawable/call"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="#706D6D"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            >
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="FOLLOWERS"
            android:textAlignment="center"



            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="FRIENDS"
            android:textAlignment="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="PHOTOS"
            android:textAlignment="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"

            />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="125"
                    android:textAlignment="center"
android:id="@+id/followers_count"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="1200"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/friends_count"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="08"
                    android:textAlignment="center"
                    android:id="@+id/photo_count"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"

                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="Real friends are those friends who always give you the company and stand behind you whatever the sistuation is..."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="My firends"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_height="70dp"
        android:id="@+id/friend_recycler"/>



</LinearLayout>